<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý bài viết</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- Bảng quản lý -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive"
                            style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                <thead>
                                    <tr>
                                        <th width='5%'>STT</th>
                                        <th width='40%'>Tiêu đề</th>
                                        <th width='20%'>Chuyên mục</th>
                                        <th width='10%'>Ngày tạo</th>
                                        <th width='10%'>Trạng thái</th>
                                        <th width='15%'>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.posts}}
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{Title}}</td>
                                        <td>{{cateName}}</td>
                                        <td>{{datePublished}}</td>
                                        {{#if Published}}
                                        <td>Đã xuất bản</td>
                                        {{else}}
                                        <td>Nháp</td>
                                        {{/if}}
                                        <td>
                                            <button class="fa fa-eye fa-fw thaotacButton" title="Xem bài viết" onclick="window.location.href='/admin/post/viewpost/:{{posID}}'"
                                                data-toggle="tooltip"></button>
                                            <button class="fa fa-remove fa-fw thaotacButton" title="Xóa"
                                                data-toggle="tooltip"></button>
                                            {{#if Published}}
                                            {{else}}
                                            <button class="fa fa-globe fa-fw thaotacButton" title="Xuất bản"
                                                data-toggle="tooltip"></button>
                                            {{/if}}

                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->