<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý bài viết</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- Bảng quản lý -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive"
                            style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                <thead>
                                    <tr>
                                        <th width='5%'>STT</th>
                                        <th width='40%'>Tiêu đề</th>
                                        <th width='20%'>Chuyên mục</th>
                                        {{!-- <th width='10%'>Lượt xem</th> --}}
                                        <th width='10%'>Ngày xuất bản</th>
                                        <th width='10%'>Trạng thái</th>
                                        <th width='15%'>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.posts}}
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{Title}}</td>
                                        <td>{{cateName}}</td>
                                        {{!-- {{#if isPublished}}
                                        <td>{{Views}}</td>
                                        {{else}}
                                        <td>---</td>
                                        {{/if}} --}}
                                        <td>{{datePublished}}</td>
                                        {{#if isPublished}}
                                        <td>Đã xuất bản</td>
                                        {{else}}
                                        <td>Nháp</td>
                                        {{/if}}
                                        <td>
                                            <form method="POST" action="/admin/post/publish/{{posID}}">
                                                <a class="fa fa-eye fa-fw thaotacButton" title="Xem bài viết"
                                                    href="/post/{{posID}}" target="_blank" data-toggle=" tooltip"></a>
                                                <button class="fa fa-remove fa-fw thaotacButton" title="Xóa" onclick="return confirm('Bạn thực sự muốn xóa bài viết này?')"
                                                    type="submit" formaction="/admin/post/delete/{{posID}}" data-toggle="tooltip"></button>
                                                {{#if isPublished}}
                                                {{else}}
                                                <button class="fa fa-globe fa-fw thaotacButton" title="Xuất bản"
                                                    type="submit" data-toggle="tooltip"></button>
                                                {{/if}}
                                            </form>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->