<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý người dùng</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- Bảng quản lý phóng viên -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Danh sách phóng viên</div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                <thead>
                                         <tr>
                                            <th width='5%'>STT</th>
                                            <th width='20%'>Họ tên</th>
                                            <th width='14%'>Số điện thoại</th>
                                            <th width='13%'>Ngày sinh</th>
                                            <th width='13%'>Email</th>
                                            <th width='15%'>Thao tác</th>
                                        </tr>
                                </thead>
                                <tbody>
                                    {{#each this.users}}
                                            <tr>
                                                <td>{{@key}}</td>
                                                <td>{{uName}}</td>
                                                <td>{{Phone}}</td>
                                                <td>{{Birthday}}</td>
                                                <td>{{Email}}</td>
                                                <td>
                                                    <button class="fa fa-eye fa-fw thaotacButton" title="Xem chi tiết"
                                                        data-toggle="tooltip"></button>
                                                    <button class="fa fa-plus-square-o fa-fw thaotacButton" title="Gia hạn thêm"
                                                        data-toggle="tooltip"></button>
                                                    <button class="fa fa-toggle-off fa-fw thaotacButton" title="Vô hiệu hóa"
                                                        data-toggle="tooltip"></button>
                                                </td>
                                            </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>        
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
