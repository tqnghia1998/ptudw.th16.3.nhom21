<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý độc giả</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- Bảng quản lý độc giả -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                <thead>
                                    <tr>
                                        <th width='5%'>STT</th>
                                        <th width='20%'>Họ tên</th>
                                        <th width='13%'>Email</th>
                                        <th width='13%'>Ngày đăng kí</th>
                                        <th width='13%'>Ngày hết hạn</th>
                                        <th width='15%'>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.users}}
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{uName}}</td>
                                        <td>{{Email}}</td>
                                        <td>{{dateBegin}}</td>
                                        <td>{{dateEnd}}</td>
                                        <td>
                                            <form method="POST">
                                                <button type="button" class="fa fa-eye fa-fw thaotacButton" title="Xem chi tiết"
                                                    onclick="location.href='/admin/subscriber/detail/{{userID}}'"
                                                    data-toggle="tooltip"></button>
                                                {{#if Actived}}
                                                <button type="submit" class="fa fa-toggle-on fa-fw thaotacButton"
                                                formaction="/admin/subscriber/disable/{{userID}}"
                                                    title="Đang kích hoạt" data-toggle="tooltip"></button>
                                                {{else}}
                                                <button type="submit" class="fa fa-toggle-off fa-fw thaotacButton" title="Bị hiệu hóa"
                                                 formaction="/admin/subscriber/enable/{{userID}}"
                                                    data-toggle="tooltip"></button>
                                                {{/if}}
                                            </form>

                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->