<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý nhãn</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- Bảng quản lý -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <button class="fa fa-plus fa-fw"
                            style="width: 110px; background: transparent; border: 0px; font-weight: bold"
                            onclick="add()">   Thêm nhãn</button>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example1">
                                <thead>
                                    <tr>
                                        <th width='5%'>STT</th>
                                        <th width='40%'>Tên nhãn</th>
                                        <th width='20%'>Lượt dùng</th>
                                        <th width='15%'>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.tags}}
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{tagName}}</td>
                                        <td>{{numbersOf}}</td>
                                        <td>
                                            <button class="fa fa-edit fa-fw thaotacButton" title="Cập nhật"
                                                data-toggle="tooltip"></button>
                                            <button class="fa fa-remove fa-fw thaotacButton" title="Xóa"
                                                data-toggle="tooltip"></button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->