<script>
  var jQuery213 = jQuery.noConflict(true);
  jQuery213(document).ready(function () {
    jQuery213(document).on("click", ".thaotacButton", function () {

      if (jQuery213(this).children(":first").prop('src').includes('checkmark')) {
        // When the user clicks the button, open the modal 
        var posID1 = document.getElementById("posID1");
        var row_index = jQuery213(this).parent().parent().index('tr');
        var table = document.getElementById("myTable");
        var id = table.rows[row_index - 1].cells[0].innerHTML;
        posID1.value = id;

        jQuery213('#myModal-moderate').show("slow");

      } else if (jQuery213(this).children(":first").prop('src').includes('multiply')) {
        var posID2 = document.getElementById("posID2");
        var row_index = jQuery213(this).parent().parent().index('tr');
        var table = document.getElementById('myTable');
        var id = table.rows[row_index - 1].cells[0].innerHTML;
        posID2.value = id;
        jQuery213('#myModal-reject').show("slow");
      }
    });

  })


  var modalModerate = document.getElementById('myModal-moderate');

  var modalReject = document.getElementById('myModal-reject');

  // Get the <span> element that closes the modal
  var spanModerate = document.getElementsByClassName("exit")[0];

  var spanReject = document.getElementsByClassName("exit")[1];

  // When the user clicks on <span> (x), close the modal
  spanModerate.onclick = function () {
    jQuery213('#myModal-moderate').hide("slow");
  }

  spanReject.onclick = function () {
    jQuery213('#myModal-reject').hide("slow");
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function (event) {
    if (event.target == modalModerate) {
      jQuery213('#myModal-moderate').hide("slow");
    }
    if (event.target == modalReject) {
      jQuery213('#myModal-reject').hide("slow");
    }
  }

  function moderate() {
    alert("Duyệt bài thành công");
    document.getElementById("moderaterForm").submit();
  }


  function reject() {
    alert("Đã từ chối bài viết");
    document.getElementById("rejectForm").submit();
  }

  // This is a functions that scrolls to #id
  function scrollTo(id) {
    // Scroll
    jQuery213('html,body').animate({ scrollTop: jQuery213("#" + id).offset().top + 18 }, 'slow');
  }


</script>


