{{#section 'css'}}
	<style>
		.text-danger {
			color: red;
		}
	</style>
{{/section}}
{{#section 'js'}}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
	<script>
		jQuery.noConflict()(function ($) {
			$('#lostpassForm').validate({
				rules: {
					username: {
						remote: {
							url: '/allusers/register/is-available-lostpass'
						}
					}
				},
				messages: {
					username: {
						required: 'Tên đăng nhập không được để trống.',
						remote: 'Tên đăng nhập không tồn tại.'
					}
				},
				errorElement: 'small',
				errorClass: 'help-block text-danger'
			});
		});
	</script>
{{/section}}

<!-- Nội dung trang web -->
<div id="content" class="container">

	<div id="main" class="row-fluid">

		<!-- Phần thông tin cơ bản -->
		<div id="main-left">
			<article id="post-206" class="post-206 page type-page status-publish hentry instock">
				<header class="entry-header">
					<h1 class="entry-title"><span style="color: white">Lấy lại mật khẩu</span></h1>
				</header><!-- .entry-header -->
			</article>

			<!-- Các ô nhập thông tin -->
			<center>
				<form method="post" id="lostpassForm" action="lostpass">
					<table>
						<tr>
							<td style="height: 30px">Tên đăng nhập</td>
						</tr>
						<tr>
							<td>
								<input type="text" name="username" id="username" style="height: 25px" required/>
							</td>
						</tr>
						<tr>
							<td>
								<input type="submit" value="Lấy lại mật khẩu" name="sendEmail" id="cf_send"/><br><br>
							</td>
						</tr>
						<tr>
							<td><p style="color: blue" id="info">(i) <b>Vui lòng kiểm tra E-mail để lấy lại mật khẩu</b></p></td>
						</tr>
					</table>
				</form>
			</center>
		</div><!-- #main-left -->
	<div class="clearfix"></div>
	</div><!-- #main -->

</div><!-- #content -->