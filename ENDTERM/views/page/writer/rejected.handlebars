    <script>
        var jQuery213 = jQuery.noConflict(true);
        jQuery213(document).ready(function () {

            // Đoạn code này xử lý sự kiện bắt dòng
            jQuery213('td:not(:last-child)').click(function () {

                var row_index = jQuery213(this).parent().index('tr');

                var col_index = jQuery213(this).index('tr:eq(' + row_index + ') td');

                alert('Row # ' + (row_index) + ' Column # ' + (col_index));

            });

            jQuery213(document).on("click", ".thaotacButton", function() {
                alert('Duyệt bài thành công, sẽ chỉnh sửa chuyên mục và tag');
            });

            scrollTo("content");
        })

        // This is a functions that scrolls to #id
        function scrollTo(id) {
            // Scroll
            jQuery213('html,body').animate({ scrollTop: jQuery213("#" + id).offset().top + 19 }, 'slow');
        }


    </script>

