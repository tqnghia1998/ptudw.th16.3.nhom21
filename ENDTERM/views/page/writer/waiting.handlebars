{{#section 'js'}}
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
        var jQuery213 = jQuery.noConflict(true);
        jQuery213(document).ready(function () {
            scrollTo("content");
        })

        // This is a functions that scrolls to #id
        function scrollTo(id) {
            // Scroll
            jQuery213('html,body').animate({ scrollTop: jQuery213("#" + id).offset().top + 19 }, 'slow');
        }


    </script>
{{/section}}

    <div id="page">
        <div id="content" class="container">
            <div id="tabwidget" style="margin-top:-20px">
                <div>

                    <ul id="tabnav">
                        <li style="width: 20%; text-align: left; float:left; ">
                            <h3><a href="/writer"><img src="/images/view-bg.png" alt="Popular">Bài chờ xuất
                                    bản&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&emsp;&emsp;</a></h3>
                        </li>
                        <li style="width: 20%; text-align: left; float:left;">
                            <h3><a href="/writer/published"><img src="/images/time.png" alt="Recent">Bài
                                    đã được xuất
                                    bản&emsp;&emsp;</a></h3>
                        </li>
                        <li style="width: 20%; text-align: left; float:left;">
                            <h3><a href="/writer/waiting" class="selected"><img src="/images/time.png" alt="Comments">Bài
                                    chờ kiểm
                                    duyệt&nbsp;&nbsp;&nbsp;&nbsp;&emsp;&emsp;</a></h3>
                        </li>
                        <li style="width: 20%; text-align: left; float:left;">
                            <h3><a href="/writer/rejected"><img src="/images/time.png" alt="Comments">Bài bị từ
                                    chối&emsp;&emsp;&emsp;&nbsp;&nbsp;&nbsp;&emsp;&emsp;</a></h3>
                        </li>
                        <li style="width: 20%; text-align: left; float:left;">
                            <h3><a href="/writer/post"><img src="/images/time.png" alt="Comments">Viết
                                    bài&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;</a></h3>
                        </li>
                    </ul>
                </div>

                {{#if isNULL}}
                {{else}}
                <div id="tab-content" style="border: 0px; margin-top:0px">

                    <div id="tab" class="table-background" style="padding:10px; height:100%; display: block;">
                        <h2 style="color: black; padding-top:10px; text-align:center">Danh sách bài đăng đang chờ kiểm
                            duyệt </h2>
                        <section>
                            <!--for demo wrap-->

                            <div class="tbl-header">
                                <table cellpadding="0" cellspacing="0" border="0" style="color:black" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width:3%">STT</th>
                                            <th style="width:25%">Tiêu đề bài viết</th>
                                            <th style="width:16%">Ảnh</th>
                                            <th style="width:30%">Mô tả</th>
                                            <th style="width:9%">Chuyên mục</th>
                                            <th style="width:8%">Ngày đăng</th>
                                            <th style="width:9%">Thao tác</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="tbl-content"  style="margin-top:-16px" >
                                <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
                                    <tbody>
                                        {{#each this.posts}}
                                        <tr>
                                            <td onclick="window.location='/post/{{posID}}';"  style="width:3%">#</td>
                                            <td onclick="window.location='/post/{{posID}}';" style="width:25%">{{Title}}</td>
                                            <td onclick="window.location='/post/{{posID}}';"  style="width:16%"><img src="{{Url}}" style="height: 80px"></td>
                                            <td onclick="window.location='/post/{{posID}}';"  style="width:30%">{{Description}}</td>
                                            <td onclick="window.location='/post/{{posID}}';"  style="width:9%">{{cateName}}</td>
                                            <td onclick="window.location='/post/{{posID}}';"  style="width:8%">{{DayWrittenFormat}}</td>
                                            <td style="width:9%">
                                                <button onclick="window.location='/writer/update/{{posID}}';" class="thaotacButton" title="Chỉnh sửa bài viết"
                                                    data-toggle="tooltip"><img
                                                        src="https://img.icons8.com/nolan/19/000000/edit.png"></button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </section>
                    </div>


                </div>  
                {{/if}}


            </div>
        </div>
    </div>

    